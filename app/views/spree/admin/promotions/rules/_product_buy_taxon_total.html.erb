<p class="field">
  <label for="<%= "#{param_prefix}_preferred_amount" %>">
    <%= select_tag "#{param_prefix}[preferred_operator]", options_for_select(Spree::Promotion::Rules::ProductBuyTaxonTotal::OPERATORS.map{|o| [t("item_total_rule.operators.#{o}"),o]}, promotion_rule.preferred_operator) %>
    <%= text_field_tag "#{param_prefix}[preferred_amount]", promotion_rule.preferred_amount, :size => 10 %>
  </label>

  <label for="<%= "#{param_prefix}_preferred_taxon" %>">
    <%= "Taxon" %>
    <%= select_tag 	"#{param_prefix}[preferred_taxon]",
     								options_for_select(Spree::Taxon.all.collect{ |t| [t.name_for_select, t.id] }, promotion_rule.preferred_taxon), :class => "select2 fullwidth"  %>
  </label>
</p>
